<h1>Sumar stock a <%= producto.titulo %></h1>
<% if (session.usuario && session.usuario.rol === 'admin') { %>
<form action="/sumar-stock/<%= producto.id %>" method="POST">
  <div>
    <label for="cantidad">Cantidad a sumar:</label>
    <input type="number" id="cantidad" name="cantidad" min="1" required>
  </div>
  <div>
    <button type="submit" class="btn btn-success">Sumar stock</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
  </div>
  <div>
    <p>Stock actual: <strong><%= producto.stock || 0 %></strong></p>
  </div>
</form>
<% } else { %>
  <div class="alert alert-danger">Acceso solo para administradores.</div>
<% } %>
